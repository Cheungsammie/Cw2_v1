<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CEEDCF
    ">
    <TextView
        android:id="@+id/textPromotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Promotion Fragment"/>

    <Button
        android:id="@+id/is_support_bluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textPromotion"
        android:text="support"
        android:onClick="SupportBlueTooth"/>
    <Button
        android:id="@+id/bluetooth_enable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/is_support_bluetooth"
        android:text="enable bluetooth"
        android:onClick="BlueToothEnable"/>
    <Button
        android:id="@+id/bluetooth_turnon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bluetooth_enable"
        android:text="turn on bluetooth"
        android:onClick="TurnOnBluetooth"/>
    <Button
        android:id="@+id/bluetooth_turnoff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bluetooth_turnon"
        android:text="turn off bluetooth"
        android:onClick="TurnoffBlueTooth"/>

</RelativeLayout>